<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <LangVersion>preview</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Matěj "lofcz" Štágl</Authors>
        <PackageProjectUrl>https://github.com/lofcz/fastdex</PackageProjectUrl>
        <RepositoryUrl>https://github.com/lofcz/fastdex</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>index,inverted index,lucene,fulltext</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Lucene.Net" Version="4.8.0-beta00016" />
      <PackageReference Include="Lucene.Net.Analysis.Common" Version="4.8.0-beta00016" />
      <PackageReference Include="Lucene.Net.Queries" Version="4.8.0-beta00016" />
    </ItemGroup>

</Project>
